{
  "compilerOptions": {
    "target": "es5",
    "types": [
      "jest"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/__tests__"
  ]
}
